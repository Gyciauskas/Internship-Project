@model PresentConnection.Internship7.Iot.ServiceModels.DeviceDto

@using (Html.BeginForm("Update", "Device", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ModelName, new { @class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.ModelName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ModelName)
        </div>
    </div>

    <div class="hr-line-dashed"></div>

    <div class="form-group">
        @Html.LabelFor(model => model.UniqueName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UniqueName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.UniqueName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
            <button class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-primary" type="submit">Save changes</button>
        </div>
    </div>
}